"    <Data Key=\"comments\" Type=\"Quote\" Translatable=\"1\">Group for default access.</Data>\n"
"    ...\n"
"</Insert>\n"
"\n"
"# Rendszerbeállítás XML\n"
"<Setting>\n"
"    <Option SelectedID=\"0\">\n"
"        <Item Key=\"0\" Translatable=\"1\">No</Item>\n"
