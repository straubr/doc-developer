"\n"
"use strict;\n"
"use warnings;\n"
"\n"
"use Kernel::System::User;\n"
"use Kernel::System::Time;\n"
msgstr ""
"package Kernel::System::ITSMConfigItem::History;\n"
"\n"
"use strict;\n"
"use warnings;\n"
"\n"
"use Kernel::System::User;\n"
"use Kernel::System::Time;\n"

