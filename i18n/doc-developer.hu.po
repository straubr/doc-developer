msgid ""
"sub Run {\n"
"    my ( $Self, %Param ) = @_;\n"
"\n"
"    # check needed stuff\n"
"    for my $Needed (qw(TypeIDs QueueIDs)) {\n"
"        if ( !$Param{$Needed} ) {\n"
"            $Self->{LogObject}->Log(\n"
"                Priority => 'error',\n"
"                Message  => \"Need $Needed!\",\n"
"            );\n"
"            return;\n"
"        }\n"
"    }\n"
"\n"
"    # set report title\n"
"    my $Title = 'Tickets per Queue';\n"
"\n"
"    # table headlines\n"
"    my @HeadData = (\n"
"        'Ticket Number',\n"
"        'Queue',\n"
"        'Type',\n"
"    );\n"
"\n"
"    my @Data;\n"
"    my @TicketIDs = $Self->{TicketObject}->TicketSearch(\n"
