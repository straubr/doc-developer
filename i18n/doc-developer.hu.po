"    }\n"
"\n"
"    return if $Self->{DiscardCount} <= 0;\n"
"\n"
"    return 1;\n"
"}\n"
msgstr ""
"sub PostRun {\n"
"    my ( $Self, %Param ) = @_;\n"
"    sleep $Self->{SleepPost};\n"
"    $Self->{DiscardCount}--;\n"
"\n"
"    if ( $Self->{Debug} ) {\n"
"        print \"  $Self->{DaemonName} eldobásainak száma: $Self->{DiscardCount}\\n\";\n"
"    }\n"
"\n"
"    return if $Self->{DiscardCount} <= 0;\n"
"\n"
"    return 1;\n"
"}\n"

#. type: Content of: <section><section><section><section><para>
