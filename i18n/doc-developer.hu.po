"        };\n"
"    }\n"
"\n"
"    my $ParamObject = $Kernel::OM->Get('Kernel::System::Web::Request');\n"
"\n"
"    my %Result;\n"
"    for my $ParamName ( $ParamObject->GetParamNames() ) {\n"
"        $Result{$ParamName} = $ParamObject->GetParam( Param => $ParamName );\n"
"    }\n"
"\n"
"    # különleges kezelés az üres POST kérésnél\n"
